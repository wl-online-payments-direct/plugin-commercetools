generator client {
  provider = "prisma-client-js"
  binaryTargets = [ "native", "debian-openssl-1.1.x", "debian-openssl-3.0.x","linux-musl", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model storeUsers {
  id        Int      @id @default(autoincrement()) @db.UnsignedInt
  userId    Int
  storeHash String   @db.VarChar(10)
  isAdmin   Boolean?

  @@unique([userId, storeHash], map: "userId_storeHash")
}
model configuration {
  id               Int      @id @default(autoincrement())
  storeHash        String   @db.VarChar(255)
  createdTimestamp DateTime @default(now())
  configKey        String   @db.VarChar(255)
  configValue      String   @db.VarChar(255)

  @@unique([storeHash, configKey])
}

