{
  "name": "@worldline/web-integration",
  "version": "1.0.0",
  "description": "Web package for worldline",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:all": "npm run link:deps && npm-run-all build:deps:* && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node ./dist/index.js",
    "eslint": "eslint . --ext .ts",
    "prettier": "prettier --ignore-path .prettierignore --write \"**/*.+(js|ts|json)\"",
    "dev": "nodemon src/index.ts",
    "dev:all": "npm run link:deps && run-p dev:build:*",
    "start:debug": "nodemon --exec \"node --inspect-brk=0.0.0.0:9229 --require ts-node/register src/index.ts\"",
    "prepare": "cd .. && husky install web/.husky",
    "link:deps": "npm link ../app ../util",
    "build:deps:app": "cd ./node_modules/@worldline/app-integration && npm run build:all",
    "build:deps:util": "cd ./node_modules/@worldline/util-integration && npm run build",
    "dev:build:app": "cd ./node_modules/@worldline/app-integration && npm run dev:all",
    "dev:build:util": "cd ./node_modules/@worldline/util-integration && npm run dev:build",
    "install:all": "cd ../app && npm install && cd ../ct && npm install && cd ../db && npm install && npm install && cd ../psp && npm install && cd ../util && npm install && cd ../web && npm install",
    "install:ci:all": "cd ../app && npm ci && cd ../ct && npm ci && cd ../db && npm ci && npm ci && cd ../psp && npm ci && cd ../util && npm ci && cd ../web && npm ci",
    "prisma:generate:all": "cd ../db && npx prisma generate"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "",
  "license": "ISC",
  "homepage": "",
  "dependencies": {
    "@types/node": "^18.11.18",
    "dotenv": "^16.0.3",
    "http-status-codes": "^2.2.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.9.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint": "^8.32.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "ts-node": "^10.9.1"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint",
      "prettier --write"
    ]
  }
}
